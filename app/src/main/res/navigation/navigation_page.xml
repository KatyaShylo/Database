<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_page"
    app:startDestination="@id/fragment_staff_list">

    <fragment
        android:id="@+id/fragment_staff_list"
        android:name="com.example.mydatabase.fragment.StaffListFragment"
        tools:layout="@layout/fragment_staff_list">

        <action
            android:id="@+id/to_edit_dialog"
            app:destination="@id/edit_dialog" />
    </fragment>

    <fragment
        android:id="@+id/fragment_add_employee"
        android:name="com.example.mydatabase.fragment.AddEmployeeFragment"
        tools:layout="@layout/fragment_add_employee" />

    <dialog
        android:id="@+id/edit_dialog"
        android:name="com.example.mydatabase.dialog.EditDialogFragment"
        tools:layout="@layout/fragment_edit_dialog">

        <argument
            android:name="id"
            app:argType="long" />
        <argument
            android:name="lastName"
            app:argType="string" />
        <argument
            android:name="firstName"
            app:argType="string" />
        <argument
            android:name="position"
            app:argType="string" />

        <action
            android:id="@+id/to_fragment_staff_list"
            app:destination="@id/fragment_staff_list" />
    </dialog>
</navigation>